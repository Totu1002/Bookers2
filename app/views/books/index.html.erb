<h2>Books</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title,book_path(book.id),:style => "color:black" %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<!-- 以下の機能はテンプレート化する -->
<!-- バリデーションチェック -->

<!-- 投稿フォーム -->
<h2>New book</h2>
<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
