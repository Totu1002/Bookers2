<h1>Editing Book</h1>

<!-- バリデーションチェック -->
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>error</h2>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id),:style => "color:black" %>
|
<%= link_to "Back", books_path,:style => "color:black" %>