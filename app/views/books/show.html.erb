<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', cfallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
         <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
        <% end %>
      </div>
      <!-- 投稿フォーム -->
      <h2>New book</h2>
      <%= form_for(@new) do |f| %>
        <div class="field row">
          <p><strong>Title</strong></p>
          <%= f.text_field :title, class: "col-xs-12 book_title" %>
        </div>
        <div class="field row">
          <p><strong>Opinion</strong></p>
          <%= f.text_area :body, class: "col-xs-12 book_body" %>
        </div>
        <div class="actions row">
          <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><a href=<%= user_path(@book.user_id) %>><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></a><br><%= link_to @book.user.name,user_path(@book.user_id) %></td>
              <td><%=link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                <td><%= link_to "Destroy", book_path(@book.id),method: :delete, data: { confirm: "Are you sure?" } %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>