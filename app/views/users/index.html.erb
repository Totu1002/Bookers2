
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!-- sidebar -->
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user.id == current_user.id %>
         <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
        <% end %>
      </div>

      <h2>New book</h2>
      <%= form_for(@new) do |f| %>
        <div class="field row">
          <p><strong>Title</strong></p>
          <%= f.text_field :title, class: "col-xs-12 book_title" %>
        </div>
        <div class="field row">
          <p><strong>Opinion</strong></p>
          <%= f.text_area :body,class: "col-xs-12 book_body" %><br>
        </div>
        <div class="actions row">
          <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
      <% end %>
    </div>
    <div class="low">
      <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            <!-- userの画像表示 -->
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
            <!-- ここerror? -->
            <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>

