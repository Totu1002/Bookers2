
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <p><%= link_to "Edit", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
      <% end %>
      <!-- new book -->
      <!-- 投稿フォーム -->
      <h2>New book</h2>
      <%= form_for(@new) do |f| %>
      
        <p>Title</p>
        <%= f.text_field :title %>
      
        <p>Body</p>
        <%= f.text_area :body %><br>
      
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title,book_path(book.id),:style => "color:black" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

